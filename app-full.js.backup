    analyzeMemoryTrend() {
        try {
            if (!this.performanceMetrics.memoryUsage || this.performanceMetrics.memoryUsage.length < 2) {
                return 'Insufficient data';
            }
            
            const first = this.performanceMetrics.memoryUsage[0];
            const last = this.performanceMetrics.memoryUsage[this.performanceMetrics.memoryUsage.length - 1];
            
            const growth = last.used - first.used;
            const timeSpan = last.timestamp - first.timestamp;
            const growthRate = growth / (timeSpan / 1000); // bytes per second
            
            if (growthRate > 1024 * 1024) { // More than 1MB/s
                return 'High memory growth - potential leak';
            } else if (growthRate > 1024 * 100) { // More than 100KB/s
                return 'Moderate memory growth';
            } else {
                return 'Stable memory usage';
            }
            
        } catch (error) {
            return 'Error analyzing memory trend';
        }
    }
    
    // Generate performance recommendations
    generatePerformanceRecommendations() {
        const recommendations = [];
        
        try {
            // Check render times
            if (this.performanceMetrics.renderTimes.length > 0) {
                const avgRenderTime = this.performanceMetrics.renderTimes.reduce((a, b) => a + b, 0) / this.performanceMetrics.renderTimes.length;
                if (avgRenderTime > 100) {
                    recommendations.push('Consider optimizing render operations');
                }
            }
            
            // Check memory usage
            if (this.performanceMetrics.memoryUsage.length > 10) {
                const memoryTrend = this.analyzeMemoryTrend();
                if (memoryTrend.includes('leak')) {
                    recommendations.push('Investigate potential memory leaks');
                }
            }
            
            // Check error count
            if (this.performanceMetrics.errorCount > 5) {
                recommendations.push('Address recurring errors');
            }
            
            // Check vocabulary size
            if (this.vocabulary && this.vocabulary.length > 5000) {
                recommendations.push('Consider implementing vocabulary pagination');
            }
            
            if (recommendations.length === 0) {
                recommendations.push('Performance appears optimal');
            }
            
        } catch (error) {
            recommendations.push('Error generating recommendations');
        }
        
        return recommendations;
    }
    
    // Optimize DOM operations
    optimizeDOMOperations() {
        try {
            // Use document fragments for batch DOM updates
            this.createDocumentFragment = () => document.createDocumentFragment();
            
            // Cache frequently accessed elements
            this.cachedElements = {
                flashcard: document.getElementById('flashcard'),
                vocabularyGrid: document.getElementById('vocabulary-grid'),
                searchInput: document.getElementById('search-input'),
                levelSelect: document.getElementById('level-select')
            };
            
            // Optimize CSS animations
            this.optimizeCSSAnimations();
            
            console.log('‚úÖ DOM operations optimized');
            
        } catch (error) {
            console.warn('‚ö†Ô∏è Error optimizing DOM operations:', error.message);
        }
    }
    
    // Optimize CSS animations
    optimizeCSSAnimations() {
        try {
            // Add will-change property to animated elements
            const animatedElements = document.querySelectorAll('.flashcard, .nav-tab, .vocab-item');
            animatedElements.forEach(element => {
                element.style.willChange = 'transform, opacity';
            });
            
            // Use transform instead of changing layout properties
            this.animateWithTransform = (element, property, value) => {
                element.style.transform = `${property}(${value})`;
            };
            
        } catch (error) {
            console.warn('‚ö†Ô∏è Error optimizing CSS animations:', error.message);
        }
    }
    
    // Initialize performance optimizations
    initializePerformanceOptimizations() {
        try {
            console.log('‚ö° Initializing performance optimizations...');
            
            // Start performance monitoring
            this.startPerformanceMonitoring();
            
            // Optimize vocabulary loading
            this.optimizeVocabularyLoading();
            
            // Optimize DOM operations
            this.optimizeDOMOperations();
            
            // Set up cleanup on page unload
            window.addEventListener('beforeunload', () => {
                this.cleanup();
            });
            
            console.log('‚úÖ Performance optimizations initialized');
            
        } catch (error) {
            console.error('‚ùå Error initializing performance optimizations:', error);
        }
    }    
// Error detection and correction system
    
    // Comprehensive error detection
    detectErrors() {
        const errors = [];
        
        try {
            console.log('üîç Starting comprehensive error detection...');
            
            // Check DOM elements
            errors.push(...this.checkDOMElements());
            
            // Check data integrity
            errors.push(...this.checkDataIntegrity());
            
            // Check event listeners
            errors.push(...this.checkEventListeners());
            
            // Check memory usage
            errors.push(...this.checkMemoryUsage());
            
            // Check console errors
            errors.push(...this.checkConsoleErrors());
            
            console.log(`üîç Error detection completed. Found ${errors.length} issues.`);
            
            return errors;
            
        } catch (error) {
            console.error('‚ùå Error during error detection:', error);
            return [{ type: 'critical', message: 'Error detection system failed', source: 'detectErrors' }];
        }
    }
    
    // Check DOM elements
    checkDOMElements() {
        const errors = [];
        
        try {
            const requiredElements = [
                'flashcard', 'level-select', 'quiz-level', 'vocabulary-grid', 
                'search-input', 'next-btn', 'flip-btn', 'quiz-container',
                'stats-display', 'theme-toggle'
            ];
            
            requiredElements.forEach(id => {
                const element = document.getElementById(id);
                if (!element) {
                    errors.push({
                        type: 'error',
                        message: `Required DOM element missing: ${id}`,
                        source: 'checkDOMElements',
                        fix: `Add element with id="${id}" to HTML`
                    });
                }
            });
            
            // Check for duplicate IDs
            const allElements = document.querySelectorAll('[id]');
            const ids = new Set();
            allElements.forEach(element => {
                if (ids.has(element.id)) {
                    errors.push({
                        type: 'warning',
                        message: `Duplicate ID found: ${element.id}`,
                        source: 'checkDOMElements',
                        fix: 'Remove duplicate ID or make unique'
                    });
                }
                ids.add(element.id);
            });
            
        } catch (error) {
            errors.push({
                type: 'error',
                message: `DOM check failed: ${error.message}`,
                source: 'checkDOMElements'
            });
        }
        
        return errors;
    }
    
    // Check data integrity
    checkDataIntegrity() {
        const errors = [];
        
        try {
            // Check vocabulary data
            if (!this.vocabulary || !Array.isArray(this.vocabulary)) {
                errors.push({
                    type: 'critical',
                    message: 'Vocabulary data is missing or invalid',
                    source: 'checkDataIntegrity',
                    fix: 'Reload vocabulary data'
                });
            } else {
                // Check vocabulary structure
                this.vocabulary.forEach((word, index) => {
                    if (!word.character || !word.pinyin) {
                        errors.push({
                            type: 'warning',
                            message: `Incomplete vocabulary entry at index ${index}`,
                            source: 'checkDataIntegrity',
                            fix: 'Complete vocabulary entry data'
                        });
                    }
                });
            }
            
            // Check stats data
            if (!this.stats || typeof this.stats !== 'object') {
                errors.push({
                    type: 'warning',
                    message: 'Stats data is missing or invalid',
                    source: 'checkDataIntegrity',
                    fix: 'Initialize stats data'
                });
            }
            
            // Check localStorage availability
            try {
                localStorage.setItem('test', 'test');
                localStorage.removeItem('test');
            } catch (e) {
                errors.push({
                    type: 'warning',
                    message: 'localStorage is not available',
                    source: 'checkDataIntegrity',
                    fix: 'Enable localStorage or use alternative storage'
                });
            }
            
        } catch (error) {
            errors.push({
                type: 'error',
                message: `Data integrity check failed: ${error.message}`,
                source: 'checkDataIntegrity'
            });
        }
        
        return errors;
    }
    
    // Check event listeners
    checkEventListeners() {
        const errors = [];
        
        try {
            // Check if critical event listeners are attached
            const criticalElements = [
                { id: 'next-btn', event: 'click' },
                { id: 'flip-btn', event: 'click' },
                { id: 'level-select', event: 'change' },
                { id: 'theme-toggle', event: 'click' }
            ];
            
            criticalElements.forEach(({ id, event }) => {
                const element = document.getElementById(id);
                if (element) {
                    // Check if element has event listeners (basic check)
                    const hasListeners = element.onclick || 
                                       element.onchange || 
                                       element.getAttribute(`on${event}`);
                    
                    if (!hasListeners) {
                        errors.push({
                            type: 'warning',
                            message: `Element ${id} may be missing ${event} event listener`,
                            source: 'checkEventListeners',
                            fix: `Add ${event} event listener to ${id}`
                        });
                    }
                }
            });
            
        } catch (error) {
            errors.push({
                type: 'error',
                message: `Event listener check failed: ${error.message}`,
                source: 'checkEventListeners'
            });
        }
        
        return errors;
    }
    
    // Check memory usage
    checkMemoryUsage() {
        const errors = [];
        
        try {
            if (performance.memory) {
                const memory = performance.memory;
                const usedMB = memory.usedJSHeapSize / 1024 / 1024;
                const limitMB = memory.jsHeapSizeLimit / 1024 / 1024;
                const percentage = (usedMB / limitMB) * 100;
                
                if (percentage > 80) {
                    errors.push({
                        type: 'critical',
                        message: `High memory usage: ${Math.round(percentage)}%`,
                        source: 'checkMemoryUsage',
                        fix: 'Optimize memory usage or clear data'
                    });
                } else if (percentage > 60) {
                    errors.push({
                        type: 'warning',
                        message: `Moderate memory usage: ${Math.round(percentage)}%`,
                        source: 'checkMemoryUsage',
                        fix: 'Monitor memory usage'
                    });
                }
            }
            
            // Check for potential memory leaks
            const domNodes = document.querySelectorAll('*').length;
            if (domNodes > 5000) {
                errors.push({
                    type: 'warning',
                    message: `High DOM node count: ${domNodes}`,
                    source: 'checkMemoryUsage',
                    fix: 'Optimize DOM structure'
                });
            }
            
        } catch (error) {
            errors.push({
                type: 'error',
                message: `Memory usage check failed: ${error.message}`,
                source: 'checkMemoryUsage'
            });
        }
        
        return errors;
    }
    
    // Check console errors
    checkConsoleErrors() {
        const errors = [];
        
        try {
            // Override console.error to capture errors
            if (!this.originalConsoleError) {
                this.originalConsoleError = console.error;
                this.capturedErrors = [];
                
                console.error = (...args) => {
                    this.capturedErrors.push({
                        timestamp: Date.now(),
                        message: args.join(' '),
                        stack: new Error().stack
                    });
                    this.originalConsoleError.apply(console, args);
                };
            }
            
            // Report captured errors
            if (this.capturedErrors && this.capturedErrors.length > 0) {
                this.capturedErrors.forEach(error => {
                    errors.push({
                        type: 'error',
                        message: `Console error: ${error.message}`,
                        source: 'checkConsoleErrors',
                        timestamp: error.timestamp,
                        fix: 'Fix the underlying issue causing the error'
                    });
                });
            }
            
        } catch (error) {
            errors.push({
                type: 'error',
                message: `Console error check failed: ${error.message}`,
                source: 'checkConsoleErrors'
            });
        }
        
        return errors;
    }
    
    // Auto-fix common errors
    autoFixErrors(errors) {
        const fixedErrors = [];
        
        try {
            console.log('üîß Starting auto-fix for detected errors...');
            
            errors.forEach(error => {
                try {
                    let fixed = false;
                    
                    switch (error.source) {
                        case 'checkDOMElements':
                            fixed = this.fixDOMErrors(error);
                            break;
                        case 'checkDataIntegrity':
                            fixed = this.fixDataErrors(error);
                            break;
                        case 'checkEventListeners':
                            fixed = this.fixEventListenerErrors(error);
                            break;
                        case 'checkMemoryUsage':
                            fixed = this.fixMemoryErrors(error);
                            break;
                    }
                    
                    if (fixed) {
                        fixedErrors.push(error);
                        console.log(`‚úÖ Auto-fixed: ${error.message}`);
                    }
                    
                } catch (fixError) {
                    console.warn(`‚ö†Ô∏è Failed to auto-fix error: ${error.message}`, fixError);
                }
            });
            
            console.log(`üîß Auto-fix completed. Fixed ${fixedErrors.length} errors.`);
            
        } catch (error) {
            console.error('‚ùå Error during auto-fix:', error);
        }
        
        return fixedErrors;
    }
    
    // Fix DOM errors
    fixDOMErrors(error) {
        try {
            if (error.message.includes('Required DOM element missing')) {
                const elementId = error.message.split(': ')[1];
                
                // Create missing elements with basic structure
                switch (elementId) {
                    case 'browse-stats':
                        const browseStats = document.createElement('div');
                        browseStats.id = 'browse-stats';
                        browseStats.className = 'browse-stats';
                        const vocabularyGrid = document.getElementById('vocabulary-grid');
                        if (vocabularyGrid && vocabularyGrid.parentNode) {
                            vocabularyGrid.parentNode.insertBefore(browseStats, vocabularyGrid);
                            return true;
                        }
                        break;
                }
            }
        } catch (error) {
            console.warn('‚ö†Ô∏è Error fixing DOM error:', error.message);
        }
        
        return false;
    }
    
    // Fix data errors
    fixDataErrors(error) {
        try {
            if (error.message.includes('Stats data is missing')) {
                this.initializeStats();
                return true;
            }
            
            if (error.message.includes('Vocabulary data is missing')) {
                // Attempt to reload vocabulary
                this.loadVocabulary().catch(e => console.warn('Failed to reload vocabulary:', e));
                return true;
            }
        } catch (error) {
            console.warn('‚ö†Ô∏è Error fixing data error:', error.message);
        }
        
        return false;
    }
    
    // Fix event listener errors
    fixEventListenerErrors(error) {
        try {
            // Re-setup event listeners
            this.setupEventListeners();
            return true;
        } catch (error) {
            console.warn('‚ö†Ô∏è Error fixing event listener error:', error.message);
        }
        
        return false;
    }
    
    // Fix memory errors
    fixMemoryErrors(error) {
        try {
            if (error.message.includes('High memory usage')) {
                // Force garbage collection if available
                if (window.gc) {
                    window.gc();
                }
                
                // Clear unnecessary data
                this.optimizeMemoryUsage();
                return true;
            }
        } catch (error) {
            console.warn('‚ö†Ô∏è Error fixing memory error:', error.message);
        }
        
        return false;
    }
    
    // Run comprehensive error detection and auto-fix
    runErrorDetectionAndFix() {
        try {
            console.log('üîç Running comprehensive error detection and auto-fix...');
            
            // Detect errors
            const errors = this.detectErrors();
            
            // Auto-fix errors
            const fixedErrors = this.autoFixErrors(errors);
            
            // Report results
            const remainingErrors = errors.filter(error => 
                !fixedErrors.some(fixed => fixed.message === error.message)
            );
            
            const report = {
                totalErrors: errors.length,
                fixedErrors: fixedErrors.length,
                remainingErrors: remainingErrors.length,
                errors: remainingErrors
            };
            
            console.log('üìä Error detection and fix report:', report);
            
            return report;
            
        } catch (error) {
            console.error('‚ùå Error during error detection and fix:', error);
            return { totalErrors: 0, fixedErrors: 0, remainingErrors: 1, errors: [error] };
        }
    }
