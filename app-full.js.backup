    showSearchSuggestions() {
        try {
            const searchInput = document.getElementById('search-input');
            if (!searchInput || searchInput.value.trim() !== '') return;
            
            // Remove existing suggestions
            this.hideSearchSuggestions();
            
            // Create suggestions based on common searches
            const suggestions = this.generateSearchSuggestions();
            if (suggestions.length === 0) return;
            
            const suggestionsContainer = document.createElement('div');
            suggestionsContainer.className = 'search-suggestions';
            suggestionsContainer.id = 'search-suggestions';
            
            suggestions.forEach(suggestion => {
                const suggestionItem = document.createElement('div');
                suggestionItem.className = 'search-suggestion-item';
                suggestionItem.textContent = suggestion;
                
                suggestionItem.addEventListener('click', () => {
                    searchInput.value = suggestion;
                    this.filterVocabulary(suggestion);
                    this.hideSearchSuggestions();
                });
                
                suggestionsContainer.appendChild(suggestionItem);
            });
            
            // Position suggestions below search input
            const searchContainer = searchInput.parentElement;
            searchContainer.style.position = 'relative';
            searchContainer.appendChild(suggestionsContainer);
            
            // Hide suggestions when clicking outside
            setTimeout(() => {
                document.addEventListener('click', this.hideSuggestionsOnOutsideClick.bind(this), { once: true });
            }, 100);
            
        } catch (error) {
            console.warn('‚ö†Ô∏è Error showing search suggestions:', error.message);
        }
    }
    
    generateSearchSuggestions() {
        try {
            const suggestions = [];
            
            // Add level-based suggestions
            for (let i = 1; i <= 6; i++) {
                suggestions.push(`HSK ${i}`);
            }
            
            // Add common characters if vocabulary is loaded
            if (this.vocabulary && this.vocabulary.length > 0) {
                const commonChars = ['‰Ω†', 'Êàë', 'Â•Ω', 'ÊòØ', 'ÁöÑ', '‰∏ç', 'Âú®', 'Êúâ'];
                commonChars.forEach(char => {
                    if (this.vocabulary.some(word => word.character === char)) {
                        suggestions.push(char);
                    }
                });
            }
            
            // Add common English words
            const commonEnglish = ['hello', 'good', 'you', 'I', 'be', 'have', 'not'];
            suggestions.push(...commonEnglish);
            
            return suggestions.slice(0, 8); // Limit to 8 suggestions
            
        } catch (error) {
            console.warn('‚ö†Ô∏è Error generating search suggestions:', error.message);
            return [];
        }
    }
    
