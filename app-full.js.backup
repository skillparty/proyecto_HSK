    markAsKnown(known, performance = null) {
        if (!this.currentWord) return;

        // Determine SRS performance if not explicitly provided
        if (performance === null) {
            performance = known ? 'good' : 'again';
        }

        // Update SRS data
        const srsUpdate = this.srs.calculateNextReview(this.currentWord, performance);
        this.srs.saveWordData(this.currentWord, srsUpdate);

        this.practiceHistory.push({
            word: this.currentWord,
            known: known,
            mode: this.practiceMode,
            timestamp: Date.now(),
            srsPerformance: performance
        });

        this.updateStats(known);
        this.savePracticeHistory();
        this.nextCard();
    }

    updateProgressBar() {
        const progressFill = document.getElementById('progress-fill');
        const progressText = document.getElementById('progress-text');
        
        if (!progressFill || !progressText) return;
        
        if (!this.currentSession || this.currentSession.length === 0) {
            progressFill.style.width = '0%';
            progressText.textContent = '0/0';
            return;
        }
        
        const progress = this.sessionIndex / this.currentSession.length * 100;
        progressFill.style.width = `${progress}%`;
        progressText.textContent = `${this.sessionIndex}/${this.currentSession.length}`;
    }

    renderBrowseTab() {
        try {
            console.log('üìö Rendering browse tab...');
            
            const grid = document.getElementById('vocabulary-grid');
            if (!grid) {
                console.error('‚ùå Vocabulary grid element not found');
                this.showControlError('Error: Elemento de vocabulario no encontrado');
                return;
            }
            
            // Show loading state
            this.showBrowseLoading(true);
            
            // Get filtered vocabulary
            const filtered = this.getFilteredVocabulary();
            
            // Clear grid
            grid.innerHTML = '';
            
            if (filtered.length === 0) {
                this.showEmptyBrowseState(grid);
                this.showBrowseLoading(false);
                return;
            }
            
            // Render vocabulary items with pagination
            this.renderVocabularyItems(filtered, grid);
            
            // Update browse stats
            this.updateBrowseStats(filtered.length);
            
            // Hide loading state
            this.showBrowseLoading(false);
            
            console.log(`‚úÖ Browse tab rendered with ${filtered.length} items`);
            
        } catch (error) {
            console.error('‚ùå Error rendering browse tab:', error);
            this.handleBrowseError(error);
        }
    }
    
    renderVocabularyItems(vocabulary, grid) {
        try {
            // Implement virtual scrolling for large datasets
            const itemsPerPage = 50;
            const currentPage = this.browseCurrentPage || 1;
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const pageItems = vocabulary.slice(startIndex, endIndex);
            
            // Create document fragment for better performance
            const fragment = document.createDocumentFragment();
            
            pageItems.forEach((word, index) => {
                const item = this.createVocabularyItem(word, startIndex + index);
                fragment.appendChild(item);
            });
            
            grid.appendChild(fragment);
            
            // Add pagination controls if needed
            if (vocabulary.length > itemsPerPage) {
                this.renderPaginationControls(vocabulary.length, itemsPerPage, currentPage);
            }
            
        } catch (error) {
            console.error('‚ùå Error rendering vocabulary items:', error);
            throw error;
        }
    }
    
    createVocabularyItem(word, index) {
        try {
            const item = document.createElement('div');
            item.className = 'vocab-item';
            item.setAttribute('data-character', word.character);
            item.setAttribute('data-level', word.level);
            item.setAttribute('data-index', index);
            
            // Add staggered animation
            item.style.animationDelay = `${(index % 10) * 0.05}s`;
            
            item.innerHTML = `
                <div class="vocab-header">
                    <div class="vocab-character clickable-character">${word.character}</div>
                    <div class="vocab-level-badge">HSK ${word.level}</div>
                </div>
