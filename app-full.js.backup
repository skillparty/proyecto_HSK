    startQuiz() {
        try {
            console.log('üß© Starting quiz...');
            
            // Validate elements exist
            const levelSelect = document.getElementById('quiz-level');
            const questionsSelect = document.getElementById('quiz-questions');
            const quizSetup = document.querySelector('.quiz-setup');
            const quizContainer = document.getElementById('quiz-container');
            const quizResults = document.getElementById('quiz-results');
            
            if (!levelSelect || !questionsSelect || !quizSetup || !quizContainer || !quizResults) {
                throw new Error('Quiz elements not found in DOM');
            }
            
            // Validate vocabulary is loaded
            if (!this.vocabulary || this.vocabulary.length === 0) {
                throw new Error('Vocabulary not loaded');
            }
            
            const level = levelSelect.value;
            const questionCount = parseInt(questionsSelect.value);
            
            // Validate inputs
            if (!level || isNaN(questionCount) || questionCount <= 0) {
                throw new Error('Invalid quiz configuration');
            }
            
            console.log(`üéØ Quiz config: Level ${level}, ${questionCount} questions`);
            
            // Filter vocabulary by level
            let filtered = level === 'all' ? 
                [...this.vocabulary] : 
                this.vocabulary.filter(word => word.level.toString() === level);
            
            if (filtered.length < questionCount) {
                const message = `Solo hay ${filtered.length} palabras disponibles para este nivel. Selecciona menos preguntas.`;
                this.showControlError(message);
                return;
            }
            
            // Generate quiz questions
            this.quiz.questions = this.generateQuizQuestions(filtered, questionCount);
            this.quiz.currentQuestion = 0;
            this.quiz.score = 0;
            this.quiz.isActive = true;
            this.quiz.selectedAnswer = null;
            
            // Validate questions were generated
            if (!this.quiz.questions || this.quiz.questions.length === 0) {
                throw new Error('Failed to generate quiz questions');
            }
            
            // Show quiz container with animation
            quizSetup.style.display = 'none';
            quizContainer.style.display = 'block';
            quizResults.style.display = 'none';
            
            // Add entrance animation
            quizContainer.style.opacity = '0';
            quizContainer.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                quizContainer.style.transition = 'all 0.3s ease';
                quizContainer.style.opacity = '1';
                quizContainer.style.transform = 'translateY(0)';
            }, 50);
            
            // Display first question
            this.displayQuizQuestion();
            
            console.log(`‚úÖ Quiz started successfully with ${this.quiz.questions.length} questions`);
            
        } catch (error) {
            console.error('‚ùå Error starting quiz:', error);
            this.handleQuizError(error, 'Error iniciando quiz');
        }
    }

    generateQuizQuestions(vocabulary, count) {
        const shuffled = this.shuffleArray([...vocabulary]);
        const questions = [];

        for (let i = 0; i < count; i++) {
            const correct = shuffled[i];
            const incorrect = this.shuffleArray(
                vocabulary.filter(w => w !== correct)
            ).slice(0, 3);

            questions.push({
                word: correct,
                options: this.shuffleArray([correct, ...incorrect]),
                type: Math.random() > 0.5 ? 'char-to-meaning' : 'meaning-to-char'
            });
        }

        return questions;
    }

    displayQuizQuestion() {
        try {
            console.log(`üìù Displaying question ${this.quiz.currentQuestion + 1}/${this.quiz.questions.length}`);
            
            // Validate quiz state
            if (!this.quiz.questions || this.quiz.currentQuestion >= this.quiz.questions.length) {
                throw new Error('Invalid quiz state or question index');
            }
            
            const question = this.quiz.questions[this.quiz.currentQuestion];
            
            // Validate question structure
            if (!question || !question.word || !question.options || !question.type) {
                throw new Error('Invalid question structure');
            }
            
            // Get DOM elements
            const questionDisplay = document.getElementById('quiz-question');
            const optionsContainer = document.getElementById('quiz-options');
            const currentEl = document.getElementById('quiz-current');
            const totalEl = document.getElementById('quiz-total');
            const scoreEl = document.getElementById('quiz-score');
            const submitBtn = document.getElementById('quiz-submit');
            const nextBtn = document.getElementById('quiz-next');
            
            if (!questionDisplay || !optionsContainer || !currentEl || !totalEl || !scoreEl || !submitBtn || !nextBtn) {
                throw new Error('Quiz display elements not found');
            }
            
            // Update progress with animation
            currentEl.textContent = this.quiz.currentQuestion + 1;
            totalEl.textContent = this.quiz.questions.length;
            scoreEl.textContent = this.quiz.score;
            
            // Display question with animation
            questionDisplay.style.opacity = '0';
            questionDisplay.style.transform = 'translateY(10px)';
            
            setTimeout(() => {
                if (question.type === 'char-to-meaning') {
                    questionDisplay.textContent = question.word.character;
                    // Add pronunciation to quiz question
                    setTimeout(() => {
                        if (this.addPronunciationToCharacter) {
                            this.addPronunciationToCharacter(questionDisplay, question.word.character);
                        }
                    }, 100);
                } else {
                    const translation = question.word.english || question.word.translation || 'No translation';
                    questionDisplay.textContent = `${translation} (${question.word.pinyin})`;
                }
                
                questionDisplay.style.transition = 'all 0.3s ease';
                questionDisplay.style.opacity = '1';
                questionDisplay.style.transform = 'translateY(0)';
            }, 100);
            
            // Display options with staggered animation
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, index) => {
                const optionEl = document.createElement('div');
                optionEl.className = 'quiz-option';
                optionEl.dataset.index = index;
                optionEl.style.opacity = '0';
                optionEl.style.transform = 'translateY(20px)';
                
                // Set option text based on question type
                if (question.type === 'char-to-meaning') {
                    const translation = option.english || option.translation || 'No translation';
                    optionEl.textContent = `${translation} (${option.pinyin})`;
                } else {
                    optionEl.textContent = option.character;
                }
                
                // Add click handler
                optionEl.addEventListener('click', () => {
                    this.selectQuizOption(index);
                });
                
                // Add keyboard support
                optionEl.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        e.preventDefault();
                        this.selectQuizOption(index);
                    }
                });
                
                optionEl.setAttribute('tabindex', '0');
                optionEl.setAttribute('role', 'button');
                optionEl.setAttribute('aria-label', `Option ${index + 1}`);
                
                optionsContainer.appendChild(optionEl);
                
                // Animate option appearance
                setTimeout(() => {
                    optionEl.style.transition = 'all 0.3s ease';
                    optionEl.style.opacity = '1';
                    optionEl.style.transform = 'translateY(0)';
                }, 200 + (index * 100));
            });
            
            // Reset button states
            submitBtn.disabled = true;
            submitBtn.style.display = 'inline-block';
            nextBtn.style.display = 'none';
            this.quiz.selectedAnswer = null;
            
            console.log(`‚úÖ Question displayed: ${question.type} - ${question.word.character}`);
            
        } catch (error) {
            console.error('‚ùå Error displaying quiz question:', error);
            this.handleQuizError(error, 'Error mostrando pregunta del quiz');
        }
    }

    selectQuizOption(index) {
        try {
            console.log(`üéØ Option selected: ${index}`);
            
            // Validate index
            if (typeof index !== 'number' || index < 0) {
                throw new Error('Invalid option index');
            }
            
            // Validate quiz state
            if (!this.quiz.questions || !this.quiz.questions[this.quiz.currentQuestion]) {
                throw new Error('Invalid quiz state');
            }
            
            const question = this.quiz.questions[this.quiz.currentQuestion];
            if (!question.options || index >= question.options.length) {
                throw new Error('Option index out of range');
            }
            
            // Remove previous selection with animation
            document.querySelectorAll('.quiz-option').forEach(opt => {
                opt.classList.remove('selected');
                opt.style.transform = '';
            });
            
            // Add selection to clicked option
            const selectedOption = document.querySelector(`[data-index="${index}"]`);
            if (!selectedOption) {
                throw new Error('Selected option element not found');
            }
            
            selectedOption.classList.add('selected');
            
            // Add selection animation
            selectedOption.style.transform = 'scale(1.02)';
            setTimeout(() => {
                selectedOption.style.transform = '';
            }, 200);
            
            // Update quiz state
            this.quiz.selectedAnswer = index;
            
            // Enable submit button
            const submitBtn = document.getElementById('quiz-submit');
            if (submitBtn) {
                submitBtn.disabled = false;
                
                // Add visual feedback to submit button
                submitBtn.style.transform = 'scale(1.05)';
                setTimeout(() => {
                    submitBtn.style.transform = '';
                }, 200);
            }
            
            console.log(`‚úÖ Option ${index} selected successfully`);
            
        } catch (error) {
            console.error('‚ùå Error selecting quiz option:', error);
            this.handleQuizError(error, 'Error seleccionando opci√≥n');
        }
    }

    submitQuizAnswer() {
        try {
            console.log('üì§ Submitting quiz answer...');
            
            // Validate answer is selected
            if (this.quiz.selectedAnswer === null || this.quiz.selectedAnswer === undefined) {
                this.showControlError('Por favor selecciona una respuesta');
                return;
            }
            
            // Validate quiz state
            if (!this.quiz.questions || !this.quiz.questions[this.quiz.currentQuestion]) {
                throw new Error('Invalid quiz state');
            }
            
            const question = this.quiz.questions[this.quiz.currentQuestion];
            
            // Find correct answer index
            const correctIndex = question.options.findIndex(opt => opt === question.word);
            if (correctIndex === -1) {
                throw new Error('Correct answer not found in options');
            }
            
            const isCorrect = this.quiz.selectedAnswer === correctIndex;
            
            console.log(`üéØ Answer: ${isCorrect ? 'CORRECT' : 'INCORRECT'} (selected: ${this.quiz.selectedAnswer}, correct: ${correctIndex})`);
            
            // Update score
            if (isCorrect) {
                this.quiz.score++;
            }
            
            // Show correct/incorrect styling with animations
            document.querySelectorAll('.quiz-option').forEach((opt, index) => {
                // Disable further clicks
                opt.style.pointerEvents = 'none';
                
                if (index === correctIndex) {
                    opt.classList.add('correct');
                    // Add success sound effect if audio is enabled
                    if (this.isAudioEnabled) {
                        this.playSuccessSound();
                    }
                } else if (index === this.quiz.selectedAnswer) {
                    opt.classList.add('incorrect');
                    // Add error sound effect if audio is enabled
                    if (this.isAudioEnabled) {
                        this.playErrorSound();
                    }
                } else {
                    // Fade out non-selected options
                    opt.style.opacity = '0.5';
                }
            });
            
            // Update buttons with animation
            const submitBtn = document.getElementById('quiz-submit');
            const nextBtn = document.getElementById('quiz-next');
            
            if (submitBtn && nextBtn) {
                submitBtn.style.display = 'none';
                nextBtn.style.display = 'inline-block';
                nextBtn.style.opacity = '0';
                nextBtn.style.transform = 'translateY(10px)';
                
                setTimeout(() => {
                    nextBtn.style.transition = 'all 0.3s ease';
                    nextBtn.style.opacity = '1';
                    nextBtn.style.transform = 'translateY(0)';
                }, 100);
            }
            
            // Update stats - pass the quiz word for level progress
            this.updateStats(isCorrect, question.word);
            
            // Show feedback message
            const feedbackMessage = isCorrect ? 
                '‚úÖ ¬°Correcto!' : 
                `‚ùå Incorrecto. La respuesta correcta es: ${question.word.character}`;
            
            this.showQuizFeedback(feedbackMessage, isCorrect);
            
            console.log(`‚úÖ Answer submitted successfully. Score: ${this.quiz.score}/${this.quiz.currentQuestion + 1}`);
            
        } catch (error) {
            console.error('‚ùå Error submitting quiz answer:', error);
            this.handleQuizError(error, 'Error enviando respuesta');
        }
    }

    nextQuizQuestion() {
        this.quiz.currentQuestion++;
        
        if (this.quiz.currentQuestion >= this.quiz.questions.length) {
            this.finishQuiz();
        } else {
            document.getElementById('quiz-submit').style.display = 'inline-block';
            document.getElementById('quiz-next').style.display = 'none';
            this.displayQuizQuestion();
        }
    }

    finishQuiz() {
        try {
            console.log('üèÅ Finishing quiz...');
            
            const score = this.quiz.score;
            const total = this.quiz.questions.length;
            const percentage = Math.round((score / total) * 100);
            
            console.log(`üìä Final results: ${score}/${total} (${percentage}%)`);
            
            // Update quiz completed count
            if (this.stats) {
                this.stats.quizzesCompleted = (this.stats.quizzesCompleted || 0) + 1;
                this.saveStats();
            }
            
            // Get DOM elements
            const quizContainer = document.getElementById('quiz-container');
            const quizResults = document.getElementById('quiz-results');
            const finalScoreEl = document.getElementById('final-score');
            const finalPercentageEl = document.getElementById('final-percentage');
            
            if (!quizContainer || !quizResults || !finalScoreEl || !finalPercentageEl) {
                throw new Error('Quiz results elements not found');
            }
            
            // Hide quiz container with animation
            quizContainer.style.transition = 'all 0.3s ease';
            quizContainer.style.opacity = '0';
            quizContainer.style.transform = 'translateY(-20px)';
            
            setTimeout(() => {
                quizContainer.style.display = 'none';
                
                // Show results with animation
                quizResults.style.display = 'block';
                quizResults.style.opacity = '0';
                quizResults.style.transform = 'translateY(20px)';
                
                // Update results content
                finalScoreEl.textContent = `${score}/${total}`;
                finalPercentageEl.textContent = `${percentage}%`;
                
                // Add performance-based styling
                if (percentage >= 80) {
                    finalPercentageEl.style.color = 'var(--color-success-600)';
                } else if (percentage >= 60) {
                    finalPercentageEl.style.color = 'var(--color-accent-600)';
                } else {
                    finalPercentageEl.style.color = 'var(--color-error-600)';
                }
                
                setTimeout(() => {
                    quizResults.style.transition = 'all 0.3s ease';
                    quizResults.style.opacity = '1';
                    quizResults.style.transform = 'translateY(0)';
                }, 50);
                
            }, 300);
            
            // Mark quiz as inactive
            this.quiz.isActive = false;
            
            // Show completion message
            const completionMessage = percentage >= 80 ? 
                'üéâ ¬°Excelente trabajo!' : 
                percentage >= 60 ? 
                'üëç ¬°Buen trabajo!' : 
                'üí™ ¬°Sigue practicando!';
            
            setTimeout(() => {
                this.showQuizFeedback(completionMessage, percentage >= 60);
            }, 1000);
            
            console.log('‚úÖ Quiz finished successfully');
            
        } catch (error) {
            console.error('‚ùå Error finishing quiz:', error);
            this.handleQuizError(error, 'Error finalizando quiz');
        }
    }

