    // Create vocabulary index for faster lookups
    createVocabularyIndex() {
        try {
            this.vocabularyIndex = {
                byCharacter: new Map(),
                byPinyin: new Map(),
                byLevel: new Map(),
                byTranslation: new Map()
            };
            
            this.vocabulary.forEach((word, index) => {
                // Index by character
                this.vocabularyIndex.byCharacter.set(word.character, index);
                
                // Index by pinyin
                if (word.pinyin) {
                    this.vocabularyIndex.byPinyin.set(word.pinyin.toLowerCase(), index);
                }
                
                // Index by level
                if (!this.vocabularyIndex.byLevel.has(word.level)) {
                    this.vocabularyIndex.byLevel.set(word.level, []);
                }
                this.vocabularyIndex.byLevel.get(word.level).push(index);
                
                // Index by translation
                const translation = word.english || word.translation;
                if (translation) {
                    this.vocabularyIndex.byTranslation.set(translation.toLowerCase(), index);
                }
            });
            
            console.log('‚úÖ Vocabulary index created');
            
        } catch (error) {
            console.warn('‚ö†Ô∏è Error creating vocabulary index:', error.message);
        }
    }
    
