    // Get performance report
    getPerformanceReport() {
        try {
            if (!this.performanceMetrics) {
                return 'Performance monitoring not active';
            }
            
            const currentTime = performance.now();
            const totalTime = currentTime - this.performanceMetrics.startTime;
            
            const report = {
                totalRuntime: Math.round(totalTime),
                averageRenderTime: this.performanceMetrics.renderTimes.length > 0 ? 
                    Math.round(this.performanceMetrics.renderTimes.reduce((a, b) => a + b, 0) / this.performanceMetrics.renderTimes.length) : 0,
                memoryTrend: this.analyzeMemoryTrend(),
                errorCount: this.performanceMetrics.errorCount,
                recommendations: this.generatePerformanceRecommendations()
            };
            
            return report;
            
        } catch (error) {
            console.warn('‚ö†Ô∏è Error generating performance report:', error.message);
            return 'Error generating report';
        }
    }
    
