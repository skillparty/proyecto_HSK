    // Optimize memory usage
    optimizeMemoryUsage() {
        try {
            // Remove unused properties from vocabulary objects
            this.vocabulary.forEach(word => {
                // Remove empty or undefined properties
                Object.keys(word).forEach(key => {
                    if (word[key] === undefined || word[key] === null || word[key] === '') {
                        delete word[key];
                    }
                });
            });
            
            // Optimize practice history
            if (this.practiceHistory && this.practiceHistory.length > 1000) {
                // Keep only last 1000 entries
                this.practiceHistory = this.practiceHistory.slice(-1000);
                this.savePracticeHistory();
            }
            
