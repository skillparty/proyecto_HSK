    highlightSearchTerms(searchTerm) {
        try {
            if (!searchTerm || searchTerm.trim() === '') return;
            
            const items = document.querySelectorAll('.vocab-item');
            const normalizedTerm = searchTerm.toLowerCase().trim();
            
            items.forEach(item => {
                const textElements = item.querySelectorAll('.vocab-character, .vocab-pinyin, .vocab-translation');
                
                textElements.forEach(element => {
                    const originalText = element.textContent;
                    const regex = new RegExp(`(${this.escapeRegex(normalizedTerm)})`, 'gi');
                    
                    if (regex.test(originalText)) {
                        element.innerHTML = originalText.replace(regex, '<mark class="search-highlight">$1</mark>');
                    }
                });
            });
            
        } catch (error) {
            console.warn('‚ö†Ô∏è Error highlighting search terms:', error.message);
