    performVocabularySearch(searchTerm) {
        try {
            if (!searchTerm || searchTerm.trim() === '') {
                // Show all vocabulary if search is empty
                this.renderBrowseTab();
                return;
            }
            
            const normalizedTerm = searchTerm.toLowerCase().trim();
            
            // Filter vocabulary based on multiple criteria
            const filtered = this.vocabulary.filter(word => {
                return this.matchesSearchCriteria(word, normalizedTerm);
            });
            
            // Update display with filtered results
            this.displayFilteredResults(filtered, searchTerm);
            
            // Update search stats
            this.updateSearchStats(filtered.length, searchTerm);
            
            console.log(`‚úÖ Search completed: ${filtered.length} results for "${searchTerm}"`);
            
        } catch (error) {
            console.error('‚ùå Error performing vocabulary search:', error);
            this.handleSearchError(error);
        }
    }
    
    matchesSearchCriteria(word, searchTerm) {
        try {
            // Search in character
            if (word.character && word.character.toLowerCase().includes(searchTerm)) {
                return true;
            }
            
            // Search in pinyin
            if (word.pinyin && word.pinyin.toLowerCase().includes(searchTerm)) {
                return true;
            }
            
            // Search in English translation
            if (word.english && word.english.toLowerCase().includes(searchTerm)) {
                return true;
            }
            
            // Search in Spanish translation
            if (word.translation && word.translation.toLowerCase().includes(searchTerm)) {
                return true;
            }
            
            // Search in level (e.g., "hsk 1", "level 2")
            if (searchTerm.includes('hsk') || searchTerm.includes('level')) {
                const levelMatch = searchTerm.match(/(\d+)/);
                if (levelMatch && word.level.toString() === levelMatch[1]) {
                    return true;
                }
            }
            
            return false;
            
        } catch (error) {
            console.warn('‚ö†Ô∏è Error matching search criteria:', error.message);
            return false;
        }
    }
    
